# ejercicio1
def comparar_hermanos(edad1, edad2):
    if edad1 > edad2:
        return f"El hermano 1 es mayor por {edad1 - edad2} años."
    elif edad2 > edad1:
        return f"El hermano 2 es mayor por {edad2 - edad1} años."
    else:
        return "Ambos hermanos tienen la misma edad."

# Programa principal
edad1 = int(input("Ingrese la edad del hermano 1: "))
edad2 = int(input("Ingrese la edad del hermano 2: "))
print(comparar_hermanos(edad1, edad2))
