#ejercicio2
def aprobar(n1, n2, n3):
    promedio = (n1 + n2 + n3) / 3
    if n1 > 4 and n2 > 4 and n3 > 4 and promedio >= 7:
        return f"Alumno aprobado con promedio {promedio:.2f}."
    else:
        return f"Alumno desaprobado con promedio {promedio:.2f}."

# Programa principal
n1 = float(input("Ingrese nota 1: "))
n2 = float(input("Ingrese nota 2: "))
n3 = float(input("Ingrese nota 3: "))
print(aprobar(n1, n2, n3))
