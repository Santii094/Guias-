# ejercicio3
print("=== Compra de productos ===")
total = 0

for i in range(1, 4):  # 3 productos
    precio = float(input(f"Ingrese el precio por Kg del producto {i}: "))
    cantidad = float(input(f"Ingrese la cantidad en Kg del producto {i}: "))
    subtotal = precio * cantidad
    print(f"Subtotal producto {i}: ${subtotal:.2f}")
    total += subtotal

print(f"\nTotal compra: ${total:.2f}")

if total > 100:
    descuento = total * 0.10
    total -= descuento
    print(f"Descuento 10% aplicado: -${descuento:.2f}")
    print(f"Nuevo total: ${total:.2f}")
